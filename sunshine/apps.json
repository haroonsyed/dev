{
    "apps": [
        {
            "image-path": "desktop.png",
            "name": "Desktop"
        },
        {
            "image-path": "desktop.png",
            "name": "Low Res Desktop",
            "prep-cmd": [
                {
                    "do": "xrandr --output HDMI-1 --mode 1920x1080",
                    "undo": "xrandr --output HDMI-1 --mode 1920x1200"
                }
            ]
        },
        {
            "detached": [
                "hyprctl dispatch exec \"sudo -u haroonsyed setsid steam steam://open/bigpicture\""
            ],
            "image-path": "steam.png",
            "name": "Steam Big Picture",
            "prep-cmd": [
                {
                    "do": "",
                    "undo": "hyprctl dispatch exec \"sudo -u haroonsyed setsid steam steam://close/bigpicture\""
                }
            ]
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}